                                </ListView.ContextMenu>
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="xReal"
                                            Width="auto">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBox Name="Txt_xReal" Width="50" Text="{Binding xReal}" IsEnabled="False"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="yReal"
                                            Width="auto">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
