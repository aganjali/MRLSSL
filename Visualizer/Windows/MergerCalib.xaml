                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="yCam1"
                                            Width="auto">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBox Name="Txt_yCam1" Width="50" Text="{Binding yCam1}" IsEnabled="False"/>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                        <GridViewColumn Header="xCam2"
                                            Width="auto">
                                            <GridViewColumn.CellTemplate>
